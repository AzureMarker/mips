use crate::ast::*;

grammar;

pub Program: Program<'input> = Item* => Program {
    items: <>.into_iter().flatten().collect()
};

Item: Option<Item<'input>> = {
    Comment => None,
    Directive => Some(Item::Directive(<>))
};

Comment: () = r"#.*";

Directive: Directive<'input> = "." <name:r"[a-z]+"> => Directive(name);
